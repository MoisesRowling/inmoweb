{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the investment platform, stored in Firestore.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "Unique Firebase Auth user ID."
        },
        "publicId": {
          "type": "string",
          "description": "A 5-digit, user-facing, unique numeric ID."
        },
        "name": {
          "type": "string",
          "description": "User's full name."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        }
      },
      "required": ["uid", "publicId", "name", "email"]
    },
     "UserBalance": {
      "title": "UserBalance",
      "type": "object",
      "description": "Represents a user's account balance.",
      "properties": {
        "amount": {
          "type": "number",
          "description": "The current balance amount."
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time",
          "description": "The last time the balance was updated."
        }
      },
      "required": ["amount", "lastUpdated"]
    },
    "Property": {
      "title": "Property",
      "type": "object",
      "description": "Represents an investment property available on the platform.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "location": { "type": "string" },
        "type": { "type": "string" },
        "price": { "type": "number" },
        "minInvestment": { "type": "number" },
        "totalShares": { "type": "number" },
        "image": { "type": "string" },
        "dailyReturn": { "type": "number" }
      },
      "required": ["id", "name", "location", "price", "minInvestment", "dailyReturn"]
    },
    "Investment": {
      "title": "Investment",
      "type": "object",
      "description": "Represents a user's investment in a specific property.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "propertyId": { "type": "string" },
        "investedAmount": { "type": "number" },
        "ownedShares": { "type": "number" },
        "investmentDate": { "type": "string", "format": "date-time" },
        "expirationDate": { "type": "string", "format": "date-time" },
        "term": { "type": "number" },
        "status": { "type": "string", "enum": ["active", "released"] }
      },
      "required": ["userId", "propertyId", "investedAmount", "investmentDate", "term", "status", "expirationDate"]
    },
    "Transaction": {
      "title": "Transaction",
      "type": "object",
      "description": "Represents a financial transaction.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "type": { "type": "string", "enum": ["deposit", "withdraw", "investment", "investment-release"] },
        "amount": { "type": "number" },
        "description": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "clabe": { "type": "string" },
        "accountHolderName": { "type": "string" }
      },
      "required": ["userId", "type", "amount", "description", "date"]
    },
    "WithdrawalRequest": {
      "title": "Withdrawal Request",
      "type": "object",
      "description": "Represents a user's request to withdraw funds.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "amount": { "type": "number" },
        "clabe": { "type": "string" },
        "accountHolderName": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"] }
      },
      "required": ["userId", "amount", "clabe", "accountHolderName", "date", "status"]
    }
  },
  "auth": {
    "providers": ["email-password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores public profiles for all users."
    },
    "/balances/{userId}": {
      "schema": { "$ref": "#/entities/UserBalance" },
      "description": "Stores the account balance for each user."
    },
    "/properties/{propertyId}": {
      "schema": { "$ref": "#/entities/Property" },
      "description": "Stores all available investment properties."
    },
    "/investments/{userId}/userInvestments/{investmentId}": {
      "schema": { "$ref": "#/entities/Investment" },
      "description": "A subcollection storing all investments for a specific user."
    },
    "/transactions/{userId}/userTransactions/{transactionId}": {
      "schema": { "$ref": "#/entities/Transaction" },
      "description": "A subcollection storing all transactions for a specific user."
    },
    "/withdrawalRequests/{requestId}": {
      "schema": { "$ref": "#/entities/WithdrawalRequest" },
      "description": "Stores all pending withdrawal requests from users."
    }
  }
}
